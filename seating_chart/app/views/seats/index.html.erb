	<style type="text/css" media="screen">
		#seating_chart_panel{
			background-color: black;
			width: 1200px;
		}
		.side{
			float: left;
			margin-left: 10px;
			margin-right: 10px;
		}
		.clear{
			clear: both;
		}
		.row{
			float: left;
			margin-bottom: 15px;
			background-color: black;
			padding: 2px;
			
		}
		.seat{
			float: left;
			width: 125px;
			height: 100px;
			margin-left: 2.5px;
			margin-right: 2.5px;
			background-color: grey;
		}
	</style>


<h1> Welcome to the Seating Chart </h1>


<% counter = 1 %>
<div id="seating_chart_panel">
	<% for i in 1..2 %>
		<div class="side">
			<% for i in 1..4 %>
				<div class="row">
					<% for i in 1..4 %>
						<div class="seat">
								<div class="seat<%=counter%>">
								<% @seats.each do |seat| %>
										<% if seat.seat_number == counter %>
											#<%= seat.seat_number%>
											<% if seat.taken?%>
												some one here
											<% else %>
												Not taken
											<% end %>
										<% end %>							   
								 <% end %>
								</div>
								<% counter = counter + 1 %>
						</div>
					<% end %>
				</div>
				<div class="clear"></div>
			<% end %>	
		</div>
	<% end %>
</div>