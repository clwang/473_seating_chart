  <title>SeatingChart</title>
  <%= javascript_include_tag :defaults %>

  <script src="http://js.pusherapp.com/1.5/pusher.min.js"></script>	

  <% javascript_tag do -%>
      var server = new Pusher('dfc37692cce3244d3b5a', 'chat')

  	server.bind('add_line', function(line) {
        Element.insert("chat_list", { top: line.name+": "+line.entry+"<br />" })
      });
  <% end -%>


